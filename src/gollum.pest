whitespace = _{ " " | "\t" | "\n" | "\r" }
comment = _{ "#" ~ (!("\r" | "\n") ~ any)* ~ "\n"* }
word = _{ 'a'..'z' | 'A'..'Z' | "_"}
digit = _{'0'..'9'}
ident = _{ word ~ (word | digit)* }

variable = { ident }
boolean = { "true" | "false" }
int = { "-"? ~ digit+ }

program = _{ boolean | variable | int }
